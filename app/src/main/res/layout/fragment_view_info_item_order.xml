<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list_view_item_order_view"
        android:layout_width="384dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_w" />

    <TextView
        android:id="@+id/tv_sum_const_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/order_item_sum"
        app:layout_constraintBottom_toBottomOf="@+id/divider_h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_h"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="88dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/divider_w"
        app:layout_constraintStart_toEndOf="@+id/tv_suma_item_order_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_number_const_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/order_item_number"
        app:layout_constraintStart_toEndOf="@+id/divider_h"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_w"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_number_const_view" />

    <TextView
        android:id="@+id/tv_suma_item_order_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="2000"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_sum_const_view"
        app:layout_constraintStart_toEndOf="@+id/tv_sum_const_view" />

    <TextView
        android:id="@+id/tv_table_number_item_order_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_number_const_view"
        app:layout_constraintStart_toEndOf="@+id/tv_number_const_view"
        tools:text="8" />

</android.support.constraint.ConstraintLayout>